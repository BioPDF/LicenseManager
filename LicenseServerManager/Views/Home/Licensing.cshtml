@{
    ViewBag.Title = "Licensing";
    string terms = "<h2>hello</h2>";
    string file = Server.MapPath("~/content/documents/terms-and-conditions-template.htm");
    terms = System.IO.File.ReadAllText(file);
}
<h2>@ViewBag.Title</h2>

<div style="margin: 0px 100px 100px 100px;">
    @Html.Label("Terms and Conditions:")
    <div style="overflow-y: scroll; border: inset; border-bottom-width: thin; border-color: lightgray; max-height: 400px">
        @Html.Raw(terms)
    </div>
    @Html.CheckBox("AcceptTermsCheckbox") Accept the Terms and Conditions
    <button id="AcceptTermsButton" name="AcceptTermsButton" class="btn btn-primary pull-right">Continue &raquo;</button>
</div>
